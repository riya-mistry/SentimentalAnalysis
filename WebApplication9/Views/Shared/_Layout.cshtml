        <div class="row">

            <div class="col-md-12">
                <div class="nav-menus">

                    <ul class="nav nav-pills">
                        <li class="active"><a style="border-radius:initial;" href="../Home/Index">Home</a></li>

                        <li><a style="border-radius:initial;" href="#">About</a></li>
                        @if (Context.Session.GetString("UserID") == null)
                        {
                        <li><a style="border-radius:initial;" asp-area="" asp-controller="Register" asp-action="Login">Login</a></li>
                        <li><a style="border-radius:initial;" asp-area="" asp-controller="Register" asp-action="Register">Register</a></li>
                        }
                        else
                        {
                        <li><a href="#" style="border-radius:initial;">@Context.Session.GetString("Username")</a></li>
